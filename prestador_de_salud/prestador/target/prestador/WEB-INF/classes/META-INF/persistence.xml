<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="prestador-pu" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/HealthProviderDS</jta-data-source>

        <!-- Entities -->
        <class>com.prestador.entity.Patient</class>
        <class>com.prestador.entity.ClinicalDocument</class>

        <properties>
            <!-- Database connection - PostgreSQL on localhost -->
<!--            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>-->
<!--            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/hcen"/>-->
<!--            <property name="jakarta.persistence.jdbc.user" value="postgres"/>-->
<!--            <property name="jakarta.persistence.jdbc.password" value="postgres"/>-->

            <!-- Hibernate properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <!-- Schema management via Flyway migrations - Hibernate validates only -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.default_schema" value="health_provider"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Connection pool settings -->
            <property name="hibernate.connection.pool_size" value="10"/>

            <!-- Enable second-level cache -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>

            <!-- Statistics -->
            <property name="hibernate.generate_statistics" value="false"/>

            <!-- Logging -->
            <property name="hibernate.use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
