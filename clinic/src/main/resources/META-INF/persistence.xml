<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="clinicPU" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Entidades de la clínica -->
        <class>uy.gub.clinic.entity.Clinic</class>
        <class>uy.gub.clinic.entity.Professional</class>
        <class>uy.gub.clinic.entity.Patient</class>
        <class>uy.gub.clinic.entity.ClinicalDocument</class>
        <class>uy.gub.clinic.entity.Specialty</class>
        <class>uy.gub.clinic.entity.AccessRequest</class>
        <class>uy.gub.clinic.entity.User</class>
        
        <jta-data-source>java:jboss/datasources/ClinicDS</jta-data-source>
        
        <properties>
            <!-- Configuración de Hibernate -->
            <!-- IMPORTANTE: NO incluir propiedades jakarta.persistence.jdbc.* cuando se usa JTA datasource -->
            <!-- Estas propiedades harían que Hibernate ignore el datasource JTA y use conexiones directas -->
            <!-- El datasource se configura en standalone-full.xml y se referencia aquí con <jta-data-source> -->
            
            <!-- Configuración de Hibernate -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            
            <!-- Configuración de codificación UTF-8 -->
            <property name="hibernate.connection.charSet" value="UTF-8"/>
            <property name="hibernate.connection.useUnicode" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
