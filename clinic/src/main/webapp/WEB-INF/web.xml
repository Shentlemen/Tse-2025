    <!-- Páginas de error -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

    <!-- Página de bienvenida -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Filtro de Autenticación - Debe estar antes de los servlets -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>uy.gub.clinic.auth.AuthenticationFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/professional/*</url-pattern>
        <url-pattern>/super-admin/*</url-pattern>
        <!-- IMPORTANTE: Interceptar todos los JSPs para proteger acceso directo -->
        <url-pattern>*.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>

    <!-- Configuración de sesión -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure>
        </cookie-config>
    </session-config>

    <!-- Mapeo del Servlet de Autenticación -->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>uy.gub.clinic.auth.AuthServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth/login</url-pattern>
        <url-pattern>/auth/logout</url-pattern>
    </servlet-mapping>

    <!-- Mapeo del Servlet de Gestión de Usuarios -->
    <servlet>
        <servlet-name>UserManagementServlet</servlet-name>
        <servlet-class>uy.gub.clinic.web.UserManagementServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UserManagementServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
        <url-pattern>/admin/users/*</url-pattern>
    </servlet-mapping>

    <!-- Mapeo del Servlet de Super Administrador -->
    <servlet>
        <servlet-name>SuperAdminServlet</servlet-name>
        <servlet-class>uy.gub.clinic.web.SuperAdminServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SuperAdminServlet</servlet-name>
        <url-pattern>/admin/super-admin</url-pattern>
        <url-pattern>/admin/super-admin/*</url-pattern>
        <url-pattern>/super-admin</url-pattern>
        <url-pattern>/super-admin/*</url-pattern>
    </servlet-mapping>

    <!-- Mapeo del Servlet Selector de Clínica -->
    <servlet>
        <servlet-name>ClinicSelectorServlet</servlet-name>
        <servlet-class>uy.gub.clinic.web.ClinicSelectorServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ClinicSelectorServlet</servlet-name>
        <url-pattern>/admin/clinic-selector</url-pattern>
        <url-pattern>/admin/clinic-selector/*</url-pattern>
    </servlet-mapping>

    <!-- Mapeo del Servlet de Gestión de Usuarios -->
    <servlet>
        <servlet-name>UserManagementServlet</servlet-name>
        <servlet-class>uy.gub.clinic.web.UserManagementServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UserManagementServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
        <url-pattern>/admin/users/*</url-pattern>
    </servlet-mapping>

    <!-- Mapeo del Servlet de Prueba de Especialidades -->
    <servlet>
        <servlet-name>TestSpecialtyServlet</servlet-name>
        <servlet-class>uy.gub.clinic.web.TestSpecialtyServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>TestSpecialtyServlet</servlet-name>
        <url-pattern>/test-specialty</url-pattern>
    </servlet-mapping>

    <!-- Mapeo del Servlet de Dashboard -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>uy.gub.clinic.web.DashboardServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
        <url-pattern>/admin/dashboard/*</url-pattern>
    </servlet-mapping>

    <!-- Mapeo del Servlet de Documentos Clínicos -->
    <servlet>
        <servlet-name>ClinicalDocumentServlet</servlet-name>
        <servlet-class>uy.gub.clinic.web.ClinicalDocumentServlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>52428800</max-request-size>
        </multipart-config>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ClinicalDocumentServlet</servlet-name>
        <url-pattern>/admin/documents</url-pattern>
        <url-pattern>/admin/documents/*</url-pattern>
    </servlet-mapping>

    <!-- Mapeo del Servlet de Notificaciones de Access Requests del HCEN -->
    <servlet>
        <servlet-name>AccessRequestNotificationServlet</servlet-name>
        <servlet-class>uy.gub.clinic.web.api.AccessRequestNotificationServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AccessRequestNotificationServlet</servlet-name>
        <url-pattern>/api/clinic/access-requests/notifications</url-pattern>
    </servlet-mapping>

</web-app>
