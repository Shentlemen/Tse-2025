# ==============================================
# Flyway Database Migration Environment Variables
# ==============================================
# Copy this file to .env.flyway and update with your actual values
# DO NOT commit .env.flyway to version control!

# Development Environment (default - Docker Compose)
FLYWAY_DB_URL=jdbc:postgresql://localhost:5432/hcen
FLYWAY_DB_USER=postgres
FLYWAY_DB_PASSWORD=postgres

# Production Environment (Virtuozzo)
# FLYWAY_DB_URL=jdbc:postgresql://production-db-host:5432/hcen_production
# FLYWAY_DB_USER=hcen_app_user
# FLYWAY_DB_PASSWORD=your-secure-production-password

# Security Settings
# Set to true in production to prevent accidental database cleaning
FLYWAY_CLEAN_DISABLED=true

# Docker Compose PostgreSQL (if using docker-compose-postgres.yml)
# FLYWAY_DB_URL=jdbc:postgresql://localhost:5432/hcen
# FLYWAY_DB_USER=postgres
# FLYWAY_DB_PASSWORD=postgres

# CI/CD Environment (GitLab CI)
# These will be set automatically from GitLab CI/CD variables
# FLYWAY_DB_URL=${CI_DATABASE_URL}
# FLYWAY_DB_USER=${CI_DATABASE_USER}
# FLYWAY_DB_PASSWORD=${CI_DATABASE_PASSWORD}
